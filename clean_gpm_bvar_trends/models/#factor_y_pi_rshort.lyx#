\begin_body

\begin_layout Section*
Trend Model Equations
\end_layout

\begin_layout Subsection*
Core World Stochastic Trends
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
r_{w,t}^{\tau} & =r_{w,t-1}^{\tau}+\epsilon_{r_{w},t}\\
\pi_{w,t}^{\tau} & =\pi_{w,t-1}^{\tau}+\epsilon_{\pi_{w},t}
\end{align}

\end_inset


\end_layout

\begin_layout Subsection*
Core Common Factors for Deviations
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
f_{r,t}^{\tau} & =f_{r,t-1}^{\tau}+\epsilon_{f_{r},t}\\
f_{\pi,t}^{\tau} & =f_{\pi,t-1}^{\tau}+\epsilon_{f_{\pi},t}
\end{align}

\end_inset


\end_layout

\begin_layout Subsection*
Core Idiosyncratic Deviation Trends
\end_layout

\begin_layout Standard
For each country 
\begin_inset Formula $C\in\{US,EA,JP\}$
\end_inset

:
 
\begin_inset Formula 
\begin{align}
r_{C,idio,t}^{\tau} & =r_{C,idio,t-1}^{\tau}+\epsilon_{r_{C},idio,t}\\
\pi_{C,idio,t}^{\tau} & =\pi_{C,idio,t-1}^{\tau}+\epsilon_{\pi_{C},idio,t}
\end{align}

\end_inset


\end_layout

\begin_layout Subsection*
Derived Full Deviation Trends
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
r_{US,dev,t}^{\tau} & =1.0\cdot f_{r,t}^{\tau}+r_{US,idio,t}^{\tau}\\
\pi_{US,dev,t}^{\tau} & =1.0\cdot f_{\pi,t}^{\tau}+\pi_{US,idio,t}^{\tau}\\
r_{EA,dev,t}^{\tau} & =\lambda_{r,EA}\cdot f_{r,t}^{\tau}+r_{EA,idio,t}^{\tau}\\
\pi_{EA,dev,t}^{\tau} & =\lambda_{\pi,EA}\cdot f_{\pi,t}^{\tau}+\pi_{EA,idio,t}^{\tau}\\
r_{JP,dev,t}^{\tau} & =\lambda_{r,JP}\cdot f_{r,t}^{\tau}+r_{JP,idio,t}^{\tau}\\
\pi_{JP,dev,t}^{\tau} & =\lambda_{\pi,JP}\cdot f_{\pi,t}^{\tau}+\pi_{JP,idio,t}^{\tau}
\end{align}

\end_inset

where 
\begin_inset Formula $\lambda_{r,C}$
\end_inset

 and 
\begin_inset Formula $\lambda_{\pi,C}$
\end_inset

 are country-specific factor loadings for real rate and inflation deviations,
 respectively.
\end_layout

\begin_layout Subsection*
Derived Full Real Rate and Inflation Trends
\end_layout

\begin_layout Standard
For each country 
\begin_inset Formula $C\in\{US,EA,JP\}$
\end_inset

:
 
\begin_inset Formula 
\begin{align}
rr_{C,t}^{\tau} & =r_{w,t}^{\tau}+r_{C,dev,t}^{\tau}\\
\pi_{C,t}^{\tau} & =\beta_{\pi,C}\cdot\pi_{w,t}^{\tau}+\pi_{C,dev,t}^{\tau}
\end{align}

\end_inset

where 
\begin_inset Formula $rr_{C,t}^{\tau}$
\end_inset

 is the full real interest rate trend,
 
\begin_inset Formula $\pi_{C,t}^{\tau}$
\end_inset

 is the full inflation trend,
 and 
\begin_inset Formula $\beta_{\pi,C}$
\end_inset

 is the pass-through coefficient from world inflation to country C's inflation trend.
\end_layout

\begin_layout Subsection*
Core Country-Specific Output Growth Trends
\end_layout

\begin_layout Standard
For each country 
\begin_inset Formula $C\in\{US,EA,JP\}$
\end_inset

:
 
\begin_inset Formula 
\begin{align}
g_{C,t}^{\tau} & =\frac{1}{\phi_{C}}\cdot rr_{C,t}^{\tau}+\epsilon_{g_{C},t}
\end{align}

\end_inset

where 
\begin_inset Formula $g_{C,t}^{\tau}$
\end_inset

 is the output growth trend and 
\begin_inset Formula $\phi_{C}$
\end_inset

 is the coefficient of relative risk aversion (or intertemporal elasticity of substitution,
 depending on the model setup).
\end_layout

\begin_layout Subsection*
Derived Full Nominal Short Rate Trends
\end_layout

\begin_layout Standard
For each country 
\begin_inset Formula $C\in\{US,EA,JP\}$
\end_inset

:
 
\begin_inset Formula 
\begin{align}
i_{C,t}^{\tau} & =rr_{C,t}^{\tau}+\pi_{C,t}^{\tau}
\end{align}

\end_inset

where 
\begin_inset Formula $i_{C,t}^{\tau}$
\end_inset

 is the nominal short-term interest rate trend.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
g_{us,t}^{\tau} & =\frac{1}{\phi_{us}}\cdot rr_{us,t}^{\tau}+\epsilon_{g_{us},t}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
rr_{C,t}^{\tau}=r_{w,t}^{\tau}+r_{C,dev,t}^{\tau}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
r_{US,dev,t}^{\tau}=1.0\cdot f_{r,t}^{\tau}+r_{US,idio,t}^{\tau}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
r_{C,idio,t}^{\tau}=r_{C,idio,t-1}^{\tau}+\epsilon_{r_{C},idio,t}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
f_{r,t}^{\tau}=f_{r,t-1}^{\tau}+\epsilon_{f_{r},t}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
r_{w,t}^{\tau}=r_{w,t-1}^{\tau}+\epsilon_{r_{w},t}
\]

\end_inset


\end_layout

\end_body
